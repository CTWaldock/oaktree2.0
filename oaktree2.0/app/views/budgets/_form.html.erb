<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for budget do |f| %>
      <% if budget.errors.any? %>
        <div id="error_explanation">
          <h2>Please enter valid information.</h2>

          <ul>
            <% budget.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">

        <div class="field">
        <%= f.label :start_date %>
        <%= f.date_field :start_date, class: "form-control", placeholder: "YYYY-MM-DD" %>
        </div>

        <div class="field">
          <%= f.label :end_date %>
          <%= f.date_field :end_date, class: "form-control", placeholder: "YYYY-MM-DD" %>
        </div>


        <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control"%>
        </div>

        <div class="field">
        <%= f.label :limit %>
        <%= f.text_field :limit, class: "form-control" %>
        </div>

        <%= f.fields_for :categories, budget_categories(budget) do |categories_fields| %>
        <div class="field">
             <%= categories_fields.label :category %>
             <%= categories_fields.text_field :title, class: "form-control" %>
           </div>

        <% end %>

      </div>

      <div class="actions">
      <%= f.submit class: "btn btn-default btn-block" %>
      </div>

    <% end %>
  </div>
</div>
