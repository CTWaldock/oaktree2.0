<table class="table">
  <thead>
    <tr>
      <th class="col-md-3">Description</th>
      <th class="col-md-3">% of Category Subtotal</th>
      <th class="col-md-3">Cost</th>
      <th class="col-md-1">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% expenses.each do |expense| %>
      <tr>
        <th scope="row"><%= expense.description %></th>
        <td><%= number_to_percentage(expense.category_percentage, precision: 0)%></td>
        <td><%= number_to_currency(expense.cost) %></td>
        <td><%=link_to "Delete Expense", expense_path(expense) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
